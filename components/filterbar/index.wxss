.nav {
  position: relative;
  z-index: 99;
  display: flex;
  /* border-bottom: 1rpx solid #d1d3d4; */
  background: #f6f6f6;
}

.nav-item {
  display: flex;
  flex: 1;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.nav-item.active .icon {
  border-bottom: 8rpx solid #fa871e;
  border-top: 0;
}

.content {
  display: flex;
  margin-left: 500rpx;
}

.mask {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.4);
}

.filter {
  display: flex;
  width: 100%;
  max-height: 1000rpx;
  z-index: 2;
  position: absolute;
  overflow-y: scroll;
  background: #f6f6f6;
}

.filter .items {
  overflow-y: scroll;
  float: left;
  height: 100%;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.filter .item {
  border-bottom: solid #f7f7f7 1rpx;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.item.active {
  color: #40DCA4;
}

.filter .multi-item {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
}
/* 大字外围 */
.multi-item .header {
  padding: 30rpx;
}
/* 大字 */
.multi-item .header .label {
  font-size: 36rpx;
  margin-left: 40rpx;
  margin-top: 84rpx;
  font-weight: 400;
}

.multi-item .body {
  display: flex;
  flex-flow: row wrap;
  margin-left: 40rpx;
}
/* 选中、未选中通用样式 */
.multi-item .body .radio {
  margin: 16rpx;
  font-size: 28rpx;
}
/* 未选中按钮 */
.radio.inactive {
  width: 180rpx;
  height: 58rpx;
  border-radius: 32rpx;
  background: #fff;
  justify-content: center;
  color: #212121;
  font-size: 28rpx;
  text-align: center;
  align-items: center;
  display: flex;
}
/* 选中后按钮 */
.radio.active {
  width: 180rpx;
  height: 56rpx;
  border-radius: 32rpx;
  background: #3161FF;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  align-items: center;
  display: flex;
}
/* 两个按钮盒子(重置 确定) */
.filter .buttons {
  display: flex;
  margin-top: 125rpx;
  height: 56rpx;
  justify-content: center;
  text-align: center;
  align-items: center;
}
/* 重置按钮 */
.buttons .reset {
  height: 100%;
  width: 218rpx;
  margin-left: 152rpx;
  flex: 1;
  color: #fff;
  background: #3161FF;
  border-radius: 28rpx 0 0 28rpx;
}
/* 确定按钮 */
.buttons .confirm {
  height: 100%;
  width: 218rpx;
  margin-right: 152rpx;
  flex: 1;
  color: #fff;
  background: #40DCA4;
  border-radius: 0 28rpx 28rpx 0;
}

.filter.hide {
  display: none;
}

.filter.show {
  display: block;
}
