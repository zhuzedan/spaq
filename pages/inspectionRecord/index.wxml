<!--pages/inspectionRecord/index.wxml-->
<!-- 搜索栏 -->
<view class="search">
  <input placeholder="检查点名称/详细地址" type='text' confirm-type='search'></input>
  <image src="../../assets/check/search.png" />
</view>
<van-dropdown-menu class="screening" active-color="#3161FF">
  <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
  <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
  <van-dropdown-item value="{{ value3 }}" options="{{ option3 }}" />
  <van-dropdown-item value="{{ value4 }}" options="{{ option4 }}" />
</van-dropdown-menu>
<view class="card" wx:for="{{dataList}}" wx:key="key">
  <view class="inform" style="margin-top: 40rpx;">
    <image src="../../assets/check/point.png"></image>
    <view class="name">检查点</view>
    <view class="detail">{{item.checkPointName}}</view>
  </view>
  <view class="inform">
    <image src="../../assets/check/type.png"></image>
    <view class="name">类型 </view>
    <view class="detail">{{item.businessType}}</view>
  </view>
  <view class="inform">
    <image src="../../assets/check/category.png"></image>
    <view class="name">类别</view>
    <view class="detail">{{item.categoryCode}}</view>
  </view>
  <view class="inform">
    <image src="../../assets/check/address.png"></image>
    <view class="name">地址 </view>
    <view class="detail">{{item.checkPointNAddress}}</view>
  </view>
  <view class="inform">
    <image src="../../assets/check/phone.png"></image>
    <view class="name">联系电话</view>
    <view class="detail">{{item.connectTel}}</view>
  </view>
  <view class="inform">
    <image src="../../assets/check/time.png"></image>
    <view class="name">提交时间 </view>
    <view class="detail">{{item.gmtCreate}}</view>
  </view>
  <view class="buttons">
    <view class="button" bindtap="getInspectionDetail">查看</view>
    <view class="button" style="background-color: #f88934">修改</view>
  </view>
  <view class="score">{{item.score}}分</view>
</view>
